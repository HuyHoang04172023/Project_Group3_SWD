@model Project_Group3_SWD.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<!-- ================ Start Banner Area ================= -->
<section class="banner-area text-center py-5 bg-light">
    <div class="container">
        <h1 class="mb-3">Login / Register</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center bg-transparent">
                <li class="breadcrumb-item"><a href="~/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Login</li>
            </ol>
        </nav>
    </div>
</section>
<!-- ================ End Banner Area ================= -->
<!--================Login Box Area =================-->
<section class="login-box-area py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h3 class="text-center mb-4">Log in to your account</h3>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <form asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input type="text" asp-for="Email" class="form-control" placeholder="Enter your email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Log In</button>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("LoginWithGoogle", "Auth")" class="btn btn-danger w-100">
                                    <i class="fab fa-google"></i> Sign in with Google
                                </a>
                            </div>
                        </form>
                        <div class="text-center mt-4">
                            <p>New here? <a href="~/Auth/Register" class="text-primary">Create an Account</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->